@model BookStore.Domain.Entities.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h1>Are you sure you want to delete this category?</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Category: @Model.CategoryName</h5>
        <p class="card-text">Description: @Model.Description</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="Id" value="@Model.CategoryID" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-area="Admin" asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
