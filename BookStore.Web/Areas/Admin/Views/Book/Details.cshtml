@model BookStore.Domain.Entities.Book

<h1>Book Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">Publisher</dt>
        <dd class="col-sm-10">@Model.Publisher</dd>

        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.ISBN</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</dd>

        <dt class="col-sm-2">Release Date</dt>
        <dd class="col-sm-10">@Model.ReleaseDate?.ToShortDateString()</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">
            @foreach (var category in ViewData["Categories"] as List<BookStore.Domain.Entities.Category> ?? new List<BookStore.Domain.Entities.Category>())
            {
                if (category.CategoryID == Model.CategoryID)
                {
                    <span>@category.CategoryName</span>
                }
            }
        </dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageURL))
            {
                <img src="@Model.ImageURL" alt="Book Image" class="img-thumbnail" style="width: 150px; height: auto;" />
            }
            else
            {
                <span>No Image Available</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-area="Admin" asp-action="Edit" asp-route-id="@Model.BookID" class="btn btn-warning">Edit</a>
    <a asp-area="Admin" asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
